<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changeInfo"
    android:fitsSystemWindows="true"
    >
    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_menu_revert" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/savatar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/edge"
        android:elevation="3dp"
        android:layout_margin="3dp"
        android:gravity="center"
        android:clickable="true">

        <ImageView
            android:id="@+id/my_savatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:id="@+id/arrow"
            android:src="@drawable/go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改头像"
            android:id="@+id/item_info"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="12dp"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/snickname"
        layout="@layout/setting_item_noicon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        app:layout_constraintTop_toBottomOf="@id/savatar"
        android:clickable="true"/>

    <include
        android:id="@+id/sgender"
        layout="@layout/setting_item_noicon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        app:layout_constraintTop_toBottomOf="@id/snickname"
        android:clickable="true"/>

    <include
        android:id="@+id/sbirth"
        layout="@layout/setting_item_noicon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        app:layout_constraintTop_toBottomOf="@id/sgender"
        android:clickable="true"/>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/ssign"
        android:layout_margin="3dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/edge"
        android:elevation="3dp"
        android:gravity="center"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的签名"
            android:id="@+id/infoSign"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp"
            android:layout_marginTop="12dp"></TextView>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:id="@+id/arrow1"
            android:src="@drawable/go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改签名"
            android:id="@+id/setSign"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@id/arrow1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="12dp"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/spassword"
        layout="@layout/setting_item_noicon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        app:layout_constraintTop_toBottomOf="@id/ssign"
        android:clickable="true"/>
</LinearLayout>